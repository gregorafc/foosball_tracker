<h1>Sign in</h1>

<%= form_tag sessions_path do %>
  <div>
    <%= label_tag :login %><br>
    <%= text_field_tag :login, params[:login] %>
  </div>
  <div class='field'>
    <%= label_tag :password %><br>
    <%= password_field_tag :password %>
  </div>
  <div class='action'><%= submit_tag 'Sign in' %>
  </div>
<% end %>