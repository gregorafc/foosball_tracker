<h1>Players list</h1>

<p><%= link_to 'New player', new_player_path, class:'btn btn-default' %></p>

<table>
  <thead>
    <tr>
      <th>Avatar</th>
      <th>First name</th>
      <th>Last name</th>
    </tr>
  </thead>
  <tbody>
    <% @players.each do |player| %>
      <tr>
        <td><%= image_tag player.avatar.url(:thumb) %></td>
        <td><%= player.firstname %></td>
        <td><%= player.lastname %></td>
        <td><%= link_to 'Show', player %></td>
        <td><%= link_to 'Edit', edit_player_path(player) %></td>
        <td><%= link_to 'Delete', player, method: :delete, data: { confirm: 'Are you sure?'} %></td>
      </tr>
    <% end %>
  </tbody>
</table>


