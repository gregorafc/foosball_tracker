<h1>Ranking</h1>

<table class='table table-striped table-hover'>
  <thead>
    <tr>
      <th>#</th>
      <th>First name</th>
      <th>Last name</th>
      <th class='info'>Rating</th>
      <th>Match played</th>
      <th>Wins</th>
      <th>Loses</th>
      <th>Goals</th>
      <th>Goals lost</th>
      <th>Points</th>
    </tr>
  </thead>
  <tbody>
    <% n = 1 %>
    <% @players.each do |player| %>
      <tr>
        <td><%= p "#{n}" %></td>
        <td><%= player.firstname %></td>
        <td><%= player.lastname %></td>
        <td class='info'><%= player.rating %></td>
        <td><%= player.matches.count %></td>
        <td><%= player.wins.count %></td>
        <td><%= player.loses.count %></td>
        <td><%= player.goals %></td>
        <td><%= player.goals_lost %></td>
        <td><%= player.points %></td>
        <% n = n + 1 %>
      </tr>
    <% end %>
  </tbody>
</table>